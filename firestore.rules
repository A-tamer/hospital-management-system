// ============================================
// FIRESTORE SECURITY RULES - PRODUCTION READY
// ============================================
// Updated to require Firebase Authentication
// ============================================

rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    
    // Check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Check if user is admin
    function isAdmin() {
      return isSignedIn() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Check if user is doctor or admin
    function isDoctorOrAdmin() {
      return isSignedIn() && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'doctor'
      );
    }
    
    // ==========================================
    // PATIENTS COLLECTION
    // ==========================================
    match /patients/{patientId} {
      // All authenticated users can read patients
      allow read: if isSignedIn();
      
      // All authenticated users can create patients
      allow create: if isSignedIn();
      
      // All authenticated users can update patients
      allow update: if isSignedIn();
      
      // Only admins can delete patients
      allow delete: if isAdmin();
    }
    
    // ==========================================
    // USERS COLLECTION
    // ==========================================
    match /users/{userId} {
      // All authenticated users can read user list
      allow read: if isSignedIn();
      
      // Only admins can create new users
      allow create: if isAdmin();
      
      // Admins can update any user, users can update themselves
      allow update: if isAdmin() || (isSignedIn() && request.auth.uid == userId);
      
      // Only admins can delete users (except themselves)
      allow delete: if isAdmin() && request.auth.uid != userId;
    }
    
    // ==========================================
    // DENY ALL OTHER COLLECTIONS
    // ==========================================
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

// ============================================
// SECURITY NOTES:
// ============================================
// 1. All operations now require Firebase Authentication
// 2. Patient data can only be accessed by authenticated users
// 3. Only admins can delete patients
// 4. Only admins can create new user accounts
// 5. User accounts cannot be deleted (prevents data loss)
// 6. Medical data is protected from unauthorized access
// ============================================

